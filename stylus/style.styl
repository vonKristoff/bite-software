@import 'nib'
@import 'fonts'
@import 'mixins'

global-reset()

@import 'airlock'
@import 'debounce'

*, * before, * after
  box-sizing border-box

/**
** Variables setup
**/


html
  background #fff
  background-image radial-gradient(rgba(255,255,255,1),rgba(0,0,0,0.5))
  background-size cover

body
  ffont("geomanist", _geomanist_regular)
  font-family "geomanist" "Fira Sans" Arial
  font-size 12px
  background-color transparent

ul, li
  list-style none

a
  text-decoration none
  &:visited
    color inherit

.capsule
  wh(100%)
  m(auto)
  
.space
  display block

.airblock
  bgc(_dark)

@import 'nav'

.bite-fixed-logo--dark
  position fixed
  width 100%
  height 100vh
  background-image url("../img/bite-trans.png") 
  background-repeat no-repeat 
  background-position 50% 
  background-size fixed
  background-color transparent
  @media screen and (max-width: 500px)
    background-position 50% 90% 
    background-size 50%

.bite-fixed-logo--light
  position fixed
  width 100%
  height 100vh
  background-image url("../img/bite-trans-light.png") 
  background-repeat no-repeat 
  background-position 50% 
  background-size fixed
  background-color transparent
  top 0
  opacity .35
  @media screen and (max-width: 500px)
    background-position 50% 90% 
    background-size 50%

.bite-sphere
  width 500px
  height 500px
  position fixed
  top calc(50% - 250px)
  left calc(50% - 250px)
  li
    position absolute
    transition all .2s
    opacity 0
    width 1px
    height 1px
    .sphere-container
      transition all .2s
      width 150px
      height 150px
      transform translate(-75px,-75px)
      border-radius 50%
      background-color transparent
      background-size contain
      box-shadow 0 0 30px rgba(0,0,0,0.25)
      border 10px solid rgba(255,255,255,0.8)
      overflow hidden
      &:hover
        border-radius:25%
        .sphere--title
          opacity 1
          border-bottom 1.5em solid white
          transform scale(1)
      @media screen and (max-width: 768px)
        border 5px solid rgba(255,255,255,.5)
      .sphere--title
        top 0
        transform scale(1.5)
        width 100%
        line-height 110px
        font-size 1.5em
        @media screen and (max-width: 768px)
          font-size 1em
        font-weight lighter
        color white
        background rgba(66,66,66,.9)
        text-align center
        font-family "geomanist"
        position relative
        opacity 0
        transition all .2s
        border-bottom 0px solid yellow
        // border-radius 50%
        p
          text-transform capitalize      

.developers
  position fixed
  width 80%
  left calc(50% - 40%)
  .dev-header
    color rgba(255,255,255,.75)
    text-align center
    font-size 6em
    @media screen and (max-width: 768px)
      font-size 4em
  .devs
    margin-top calc(30vh - 6em - 75px)
    text-align center
    .dev-container
      position relative
      font-size 0
      display inline-block
      transition all .2s
      width 100px
      height 100px
      border-radius 50%
      background-color transparent
      background-size contain
      box-shadow 0 0 30px rgba(0,0,0,0.25)
      border 5px solid rgba(255,255,255,0.8)
      margin 0 15%
      &:hover
        cursor pointer
        border 15px solid rgba(255,255,255,0.8)
      .dev-ops
        position absolute
        font-size 12px
        color white
        width 150px
        top -15px
        margin-left -30px
        text-align center
        li
          display inline-block
          background-color rgba(0, 150, 200, 0.9)
          padding .5em .5em
          margin-bottom .25em
          border 1px solid rgba(46, 0, 181, 0.32)
          border-radius 4px
          text-align center
  .dev-footer
    margin-top 3em
    p
      color rgba(255,255,255,.5)
      font-size .9em
      text-align center

.space
  .main
    .iframe-custom
      wh(100%, 100vh)

.capsule
  .bite-description
    display none
    position fixed
    bottom 1.5rem
    width 100%
    font-size 1em
    background-color rgba(169, 255, 255, 0.54)
    font-size 0
    .author
      font-size 12px
      display inline-block
      color white
      background-color #51519D
      border-right 1px solid rgba(0,0,0,.125)
      padding 1em
    .title
      font-size 12px
      display inline-block
      color #00008b
      border-right 1px solid rgba(0,0,0,.125)
      padding 1em
    .type
      font-size 12px
      display inline-block
      color #00008b
      border-right 1px solid rgba(0,0,0,.125)
      padding 1em
      &.jquery
        background-color #FCFFD0
    .description
      font-size 12px
      color #00008b
      padding 1em
      display inline-block
      background-color transparent
    &.active
      display block

.gap
  mtb(3em)      
.airpress
  font-family geomanist "Fira Sans"
  border-radius 0
  &.navigate
    bgc(rgba(255,255,255,.25))
    transition all .3s
    &:hover
      bgc(rgba(0,0,0,.525))
      color #ddd
      _b(1px, rgba(0,0,0,.3), 3px)
  &.update
    _b(1px, _mute, 3px)
    bgc(space_blue)
    color _darker
    &:hover
      bgc(space_green)
  &.current
    bgc(rgba(255, 254, 194, 0.75))
    color space_dark
